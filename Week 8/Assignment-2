import java.util.*;
public class Pattern2 {
    public static void main(String[] args) {
        Scanner inr = new Scanner(System.in);
	    int l = inr.nextInt();
        // Add the necessary code in the below space
      
      
      for(int i=0;i<l;i++) {
         for(int j=1;j<l-i;j++) {
            System.out.print(" ");
         }
         for(int k=1;k<(i+2);k++) {
            System.out.print("* ");
         }
         System.out.println();
      }
    }
}
